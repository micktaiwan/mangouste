<% form_for(@cv) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :subtitle %><br />
    <%= f.text_field :subtitle %>
  </div>
  <div class="field">
    <%= f.label :driver_license %><br />
    <%= f.text_field :person.driver_license %>
  </div>
  <div class="field">
    <%= f.label :postal_address %><br />
    <%= f.text_area :person.address.postal_address %>
  </div>
  <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :person.address.postal_code %>
  </div>
  <div class="field">
    <%= f.label :town %><br />
    <%= f.text_field :person.address.town %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
